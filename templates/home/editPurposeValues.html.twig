{% extends 'base.html.twig' %}

{% block body %}
<div class="adminPanel">
    {% if type == 'purpose' %}
    <h1>Formulaire de modification de la partie "Valeurs Wewelcome"</h1>
    {% else %}
    <h1>Formulaire de modification de la partie "But Wewelcome"</h1>
    {% endif %}
    {{ form_start(form, {'attr' : {'class' : 'adminForm'}}) }}
        {% for label, messages in app.flashes %}
        {% for message in messages %}
        <p class="error-upload-photo">{{ message }}</p>
        {% endfor %}
        {% endfor %}
        {{ form_errors(form.text) }}
        {{ form_label(form.text, 'Texte :') }}
        {{ form_widget(form.text) }}
        {{ form_help(form.text) }}
        {{ form_label(form.pictureOne, 'Photo :') }}
        {{ form_errors(form.pictureOne) }}
        {{ form_widget(form.pictureOne) }}
        {{ form_help(form.pictureOne) }}
        {{ form_label(form.legendPictureOne, 'LÃ©gende :') }}
        {{ form_errors(form.legendPictureOne) }}
        {{ form_widget(form.legendPictureOne) }}
        {{ form_help(form.legendPictureOne) }}
        <button>Valider</button>
    {{ form_end(form) }}
    {% if type == 'purpose' %}
    <a href="{{ path('home') }}#section-purpose">
        <input type="button" value="Retour">
    </a>
    {% else %}
    <a href="{{ path('home') }}#section-values">
        <input type="button" value="Retour">
    </a>
    {% endif %}
</div>
{% endblock %}
